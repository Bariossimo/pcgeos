    optr           obj = NULL;
    MemHandle      newMoniker = NULL;

    obj = response->CEMCIRP_newItem;

	newMoniker = ObjDuplicateResource(
        HandleOf(@MinimButtonMoniker),  // MemHandle of resource; must not be loaded
        MemOwner(HandleOf(obj)),        // GeodeHandle - owner of duplicate
        MemGetInfo(HandleOf(obj), MGIT_EXEC_THREAD) // ThreadHandle - burden thread of duplicate
    );

    @call obj::MSG_GEN_REPLACE_VIS_MONIKER_OPTR(
                ConstructOptr(newMoniker, ChunkOf(@MinimButtonMoniker)),
